{
  "parser": "babel-eslint",
  "extends": ["plugin:prettier/recommended"],
  "plugins": [
    "flowtype"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "ecmaFeatures": {
    "defaultParams": true
  },
  "rules": {
    "semi": [2, "never"],
    "prefer-arrow-callback": 0,
    "comma-dangle": 0,
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": 0,
    "react/forbid-prop-types": 0,
    "function-paren-newline": 0,
    "class-methods-use-this": 0,
    "arrow-parens":["error","always"],
    "object-curly-newline":["error", {
      "ObjectExpression": {
        "multiline": true,
        "consistent": true
      },
      "ObjectPattern": {
      "multiline": true,
      "consistent": true
      },
      "ImportDeclaration": {
      "multiline": true,
      "consistent": true
      },
      "ExportDeclaration": {
          "multiline": true,
          "consistent": true
      }
    }
    ]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}


